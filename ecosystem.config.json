{
  "apps": [
    {
      "name": "Credit-Service-Local",
      "script": "src/server.js",
      "env": {
        "PORT": 4004,
        "NODE_ENV": "development"
      },
      "err_file": "err.log",
      "out_file": "out.log",
      "watch_delay": 1000
    },
    {
      "name": "Credit-Service",
      "script": "src/server.js",
      "env": {
        "PORT": 4000,
        "NODE_ENV": "production"
      },
      "out_file": "/home/ubuntu/projects/hooker.out.log",
      "err_file": "/home/ubuntu/projects/hooker.err.log"
    }
  ],
  "deploy": {
    "production": {
      "user": "ubuntu",
      "host": ["ec2-3-140-244-169.us-east-2.compute.amazonaws.com"],
      "ref": "origin/main",
      "repo": "git@github.com:radiolife-labs/auth-service.git",
      "path": "/home/ubuntu/projects/radiolife",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem.config.json --only Credit-Service"
    },
    "production-local": {
      "user": "ubuntu",
      "host": ["localhost"],
      "ref": "origin/main",
      "repo": "git@github.com:radiolife-labs/auth-service.git",
      "path": "/home/ubuntu/projects/radiolife",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem.config.json --only Credit-Service"
    }
  }
}
